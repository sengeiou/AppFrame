<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <frame.zzt.com.appframe.slidelock.SlideLockHorizontalView
        android:id="@+id/slideLockHorizontal"
        android:layout_width="336dp"
        android:background="@android:color/transparent"
        android:layout_height="84dp" >


        <FrameLayout
            android:id="@+id/ll_slide_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_1e74b6"
            android:gravity="center">

            <frame.zzt.com.appframe.slidelock.SlideLockProgress
                android:id="@+id/custom_car_start_status"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size_11"
                android:textColor="@android:color/white"
                android:text="一键关闭"/>

        </FrameLayout>


    </frame.zzt.com.appframe.slidelock.SlideLockHorizontalView>

    <TextView
        android:text="拖动按钮至左端"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/color_a8aef6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@+id/slideLockHorizontal"
        android:layout_alignParentStart="true" android:layout_marginStart="40dp"
        android:layout_marginTop="69dp" android:id="@+id/textView4"/>


</RelativeLayout>